{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "metarhia",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "plugins": ["sonarjs", "react"],
    "parserOptions": {
        "ecmaVersion": 12,
        "jsx": true,
        "sourceType": "module"
    },
    "rules": {
        "sonarjs/cognitive-complexity": ["error", 15],
        "indent": ["error", "tab"],
        "no-extra-parens": ["error", "all", { "ignoreJSX": "multi-line" }],
        "react/prop-types": 0,
        "react/destructuring-assignment": [2, "always"]
    }
}
